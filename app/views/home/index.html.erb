<div class="container mt-5">
  <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
      <h1 class="display-4"><%= @last_article.title %> </h1>
      <p class="lead my-3"><%= @last_article.text %></p>
      <p class="lead mb-0"><%= link_to 'Continue reading...', article_path(@last_article.id), class:'text-white font-weight-bold' %></p>
    </div>
  </div>
  <hr class="my-4">
  <div class="row">
    <% @articles.last(3).each do |article| %>
    <%= render partial:"layouts/card", locals: {
      title: article.title,
      text: article.text[0,100],
      id: article.id
    } %>
    <% end %>
    </div>
    <%= link_to 'Show more...', articles_path, class:'btn btn-outline-primary mt-5 mb-5'%>

  </div>
