<section class="jumbotron text-center">
    <div class="container">
      <h1>Judo Club de Martigny</h1>
      <p class="lead text-muted">Politesse – Courage – Sincérité – Honneur – Modestie – Respect – Contrôle de soi – Amitié</p>
      <p>
        <%= link_to 'Je souhaite participer', home_subscribe_path, class:'btn btn-primary my-2' %>
      </p>
    </div>
  </section>
<div class="container mt-5">
  <hr class="my-4">
  <div class="row">
    <% @articles.last(3).each do |article| %>
    <%= render partial:"layouts/card", locals: {
