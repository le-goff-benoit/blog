
<%= form_with scope: :user, class:'form-group', model: @user, url: user_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class:"form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :role %><br>
    <%= form.text_field :role, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit class:'btn btn-primary'%>
    <%= render "layouts/back_home" %>
  </div>
<% end %>
